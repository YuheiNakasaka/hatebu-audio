{
  "name": "hatebu-audio",
  "version": "0.1.0",
  "description": "はてなブックマークの記事を要約して音声化するシステム",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "build": "tsc",
    "build:website": "cd src/website && next build && mkdir -p ../../dist/website && cp -r out/* ../../dist/website/",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "test": "jest",
    "db:init": "ts-node src/scripts/initDb.ts"
  },
  "keywords": [
    "hatena",
    "bookmark",
    "audio",
    "tts",
    "summary",
    "podcast"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.427.0",
    "@aws-sdk/lib-storage": "^3.427.0",
    "@google-cloud/text-to-speech": "^4.2.1",
    "@types/fluent-ffmpeg": "^2.1.27",
    "axios": "^1.4.0",
    "chalk": "^4.1.2",
    "cheerio": "^1.0.0-rc.12",
    "commander": "^10.0.1",
    "dotenv": "^16.3.1",
    "fluent-ffmpeg": "^2.1.3",
    "get-audio-duration": "^4.0.1",
    "inquirer": "^8.2.5",
    "next": "^13.5.4",
    "openai": "^4.87.3",
    "ora": "^5.4.1",
    "pdf-parse": "^1.1.1",
    "podcast": "^2.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rss-parser": "^3.13.0",
    "sqlite3": "^5.1.6",
    "turndown": "^7.1.2",
    "wrangler": "^3.10.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.4.1",
    "@types/inquirer": "^8.2.6",
    "@types/jest": "^29.5.2",
    "@types/node": "^18.16.18",
    "@types/pdf-parse": "^1.1.4",
    "@types/react": "^18.2.28",
    "@types/react-dom": "^18.2.13",
    "@types/sqlite3": "^3.1.8",
    "@types/turndown": "^5.0.1",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  }
}
